<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= area.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= area.title %></h5>
                  <p class="card-text"><%= area.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%= area.location %></li>
                  <li class="list-group-item">$<%= area.price %>/month</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-primary" href="/areas/<%=area._id%>/edit">Edit</a>
                  <form class="d-inline" action="/areas/<%=area._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                  </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/areas">All Areas</a>
                </div>
            </div>
        </div>
    </div>
