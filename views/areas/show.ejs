<% layout('layouts/boilerplate') %>

  <div class="row">
    <div class="col-6">
      <div class="card mb-3">
        <img src="<%= area.image %>" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">
            <%= area.title %>
          </h5>
          <p class="card-text">
            <%= area.description %>
          </p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted"><%= area.location %></li>
          <li class="list-group-item">Submitted by <%= area.author.username %>
          </li>
          <li class="list-group-item">$<%= area.price %>/month</li>
        </ul>
        <% if( currentUser && area.author.equals(currentUser._id)){ %>
          <div class="card-body">
            <a class="card-link btn btn-primary" href="/areas/<%=area._id%>/edit">Edit</a>
            <form class="d-inline" action="/areas/<%=area._id%>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
          <% } %>
        <div class="card-footer text-muted">
          <a href="/areas">All Areas</a>
        </div>
      </div>
    </div>
    <div class="col-6">
      <h4>Leave a Review</h4>
      <form class="mb-3 validated-form" action="/areas/<%=area._id%>/reviews" method="POST" novalidate>
        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <input id="rating" class="form-range" name="review[rating]" type="range" min="1" max="5">
        </div>
        <div class="mb-3">
          <label class="form-label" for="body">Review:</label>
          <textarea class="form-control" name="review[body]" id="body" required cols="3" rows="10"></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <button class="btn btn-success" type="submit">Submit Review</button>
      </form>

      <% for(let review of area.reviews) { %>
        <div class="card mb-2 position-relative">

          <div class="mb-2 card-body">
            <h5 class="card-title">
              Rating: <%= review.rating %>
            </h5>
            <p class="card-text">
              <%= review.body %>
            </p>
            <form action="/areas/<%=area._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
            <button class="m-2 btn btn-sm btn-danger position-absolute bottom-0 end-0">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
    </div>
  </div>