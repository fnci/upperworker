<% layout('layouts/boilerplate') %>

<div id="cluster-map" class="mb-2"></div>

<h1>All areas</h1>
<!--         <div>
            <a href="/areas/new">Add New Area</a>
        </div> -->
<% for (let area of areas) { %>
<div class="card card-index">
  <div class="row">
    <div class="col-md-4">
      <% if(area.images.length){ %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        alt="<%=area.title%>"
        src="<%=area.images[0].url%>"
      />
      <% } else { %>
      <img
        crossorigin="anonymous"
        class="img-fluid"
        alt="<%=area.title%>"
        src="https://res.cloudinary.com/ddqiasrsz/image/upload/v1684992136/upperworker/y22dz63dc88wzpq1t5cy.jpg"
      />
      <% } %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title-index"><%=area.title%></h5>
        <p class="text-location-index">
          <small class="text-muted"> <%= area.location %> </small>
        </p>
        <p class="card-text cutoff-text"><%=area.description%></p>
        <a href="/areas/<%= area._id %>" class="btn btn-primary">
          <%= area.title %>
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
  const areas = { features: <%- JSON.stringify(areas) %>};
</script>
<script src="/js/clusterMap.js"></script>
